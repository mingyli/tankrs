include "world.fbs";

union MessageBuf { InitialGameBuf, VisibleStateBuf }

// This message is sent once at the start of the game. Contains state that
// remains constant for the duration of the game.
table InitialGameBuf {
  world: WorldBuf;
}

table VisibleStateBuf {
  blocks: [BlockBuf];
}

root_type VisibleStateBuf;
